<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="colorView">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:layout_weight">1</item>
        <item name="android:padding">10dp</item>
    </style>

  <style name="text" parent="Widget.AppCompat.TextView">
    <item name="android:textSize">14sp</item>
    <item name="android:textColor">@color/text_color</item>
    <item name="android:layout_width">wrap_content</item>
    <item name="android:layout_height">wrap_content</item>
    <item name="android:fontFamily">@font/montserrat_medium</item>
  </style>

  <style name="text.secondary" parent="text">
    <item name="android:textColor">@color/on_secondary</item>
  </style>

  <style name="checkbox" parent="text">
    <item name="android:layout_width">0dp</item>
    <item name="android:layout_height">wrap_content</item>
    <item name="android:layout_weight">1</item>
    <item name="android:buttonTint">@color/primary</item>
    <item name="android:paddingVertical">8dp</item>
    <item name="android:paddingEnd">8dp</item>
  </style>
</resources>